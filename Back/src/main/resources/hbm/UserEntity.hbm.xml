<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.clinic.model.UserEntity" table="user" schema="clinic">
        <id name="userId">
            <column name="userID" sql-type="int(11)"/>
            <generator class="identity"/>
        </id>
        <property name="username">
            <column name="username" sql-type="varchar(20)" length="20"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(20)" length="20"/>
        </property>
        <property name="type">
            <column name="type" sql-type="varchar(10)" length="10"/>
        </property>
    </class>
</hibernate-mapping>